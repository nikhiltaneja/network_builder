<div class="row">
  <div class="profile-picture col-xs-3">
    <%= image_tag @user.image, size: "150x150" %>
  </div>

  <div class="main-info col-xs-offset-3">
    <h3><%= @user.first_name %> <%= @user.last_name %></h3>
    <h4><%= @user.headline %></h4>
    <h4><%= @user.location %></h4>
    <h4><%= link_to "LinkedIn Profile", @user.public_profile, target: 'blank' %></h4>
  </div>
</div>

<%= validate_summary(@user) %>

<%= validate_jobs(@user) %>

<%= validate_degrees(@user) %>

<% if @match %>
  <div class="row">
    <%= button_to 'Accept', match_path(id: @match.id, responder_status: :accepted, status: :accepted), method: 'put', class: "btn btn-success btn-lg" %>
    <%= button_to 'Reject', match_path(id: @match.id, responder_status: :rejected, status: :rejected), method: 'put', class: "btn btn-danger btn-lg" %>
  </div>
<% else %>
  <div class="row">
    <%= button_to 'Yes', matches_path(responder_id: @user.id, requester_status: :accepted), method: 'post', class: "btn btn-success btn-lg" %>
    <%= button_to 'No', matches_path(responder_id: @user.id, requester_status: :rejected), method: 'post', class: "btn btn-danger btn-lg" %>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-3">
    <div class="arrow-left">
      <% unless @user.id == 1 %>
        <%= link_to user_path(@user.id - 1) do %>
          <i class="glyphicon glyphicon-chevron-left"></i>
        <% end %>  
      <% end %>
    </div>
  </div>

  <div class="col-xs-offset-1">
    <div class="arrow-right">
      <% unless @user.id == User.all.count %>
        <%= link_to user_path(@user.id + 1) do%>
          <i class="glyphicon glyphicon-chevron-right"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
