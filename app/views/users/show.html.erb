<div class="profile-picture">
  <%= image_tag @user.image, size: "150x150" %>
</div>

<div class="main-info">
  <h3><%= @user.first_name %> <%= @user.last_name %></h3>
  <h4><%= @user.headline %></h4>
  <h4><%= @user.location %></h4>
  <h4><%= link_to "LinkedIn Profile", @user.public_profile, target: 'blank' %></h4>
</div>

<% if @user.summary && !@user.summary.empty? %>

  <div class="summary">
    <h3>Summary</h3>
    <p><%= @user.summary %></p>
  </div>

<% end %>


<% if @user.jobs %>

  <div class="work-experience">
    <h3>Work Experience</h3>
    <ul>
      <% @user.jobs.each do |job| %>
        <li><%= job.company.name %>, <%= job.position.name %> </li>
      <% end %>
    </ul>
  </div>

<% end %>

<% if @user.degrees %>

  <div class="education-info">
    <h3>Education</h3>
    <ul>
      <% @user.degrees.each do |degree| %>
        <li><%= degree.school.name %></li>

        <% if degree.title %>

          <ul>
            <li><%= degree.title %> <%= degree.specialty.name %></li>
          </ul>

        <% end %>

      <% end %>
    </ul>
  </div>

<% end %>

<div class="arrow-left">
  <% unless @user.id == 1 %>
    <%= link_to user_path(@user.id - 1) do %>
      <i class="glyphicon glyphicon-chevron-left"></i>
    <% end %>  
  <% end %>
</div>

<div class="arrow-right">
  <% unless @user.id == User.all.count %>
    <%= link_to user_path(@user.id + 1) do%>
      <i class="glyphicon glyphicon-chevron-right" size="150x150"></i>
    <% end %>
  <% end %>
</div>
