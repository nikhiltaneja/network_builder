<% if current_user %>
  <div class="profile-picture">
    <%= image_tag current_user.image, size: "150x150" %>
  </div>

  <div class="main-info">
    <h3><%= current_user.first_name %> <%= current_user.last_name %></h3>
    <h4><%= current_user.headline %></h4>
    <h4><%= current_user.location %></h4>
    <h4><%= link_to "LinkedIn Profile", current_user.public_profile %></h4>
  </div>

  <% if current_user.summary %>

    <div class="summary">
      <h3>Summary</h3>
      <p><%= current_user.summary %></p>
    </div>

  <% end %>

  <div>
    <h3>Discussion Topics</h3>
  </div>

  <div class="work-experience">
    <h3>Work Experience</h3>
    <ul>
      <% current_user.jobs.each do |job| %>
        <li><%= job.company.name %>, <%= job.position.name %> </li>
      <% end %>
    </ul>
  </div>

  <div class="education-info">
    <h3>Education</h3>
    <ul>
      <% current_user.degrees.each do |degree| %>
        <li><%= degree.school.name %></li>
        <ul>
          <li><%= degree.title %> <%= degree.specialty.name %></li>
        </ul>
      <% end %>
    </ul>
  </div>

<% else %>
  <h2>Welcome!</h2>
<% end %>
