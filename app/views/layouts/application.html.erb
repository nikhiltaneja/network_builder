<!DOCTYPE html>
<html>
<head>
  <title>NetworkBuilder</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

  <!-- Optional theme -->
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">

  <!-- Latest compiled and minified JavaScript -->
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

  <%= csrf_meta_tags %>
</head>

<% if current_user %>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-xs-3 logo">
          <%= image_tag 'networkbuilder_logo.png', size: '250x40' %>
        </div>
<% else %>
  <body class="home">
<% end %>
      <% if current_user %>
        <div class="col-xs-2 col-xs-offset-7">
          Signed in as <%= current_user.first_name %>!
        </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <%= render partial: "layouts/navbar" %>
      </div>
    </div>
      <% else %>
    </div>
    <div class="row" id="sign-in-button-container">
      <center><%= image_tag 'networkbuilder_logo.png', size: '520x65' %></center>
      <center><h2><strong>Meet someone new over a cup of coffee</strong></h2></center>
      <div id="sign-in-button">
        <%= button_to "Sign in with LinkedIn", "/auth/linkedin", method: :get, class:"btn btn-primary btn-lg btn-block" %>
      </div>
    </div>
      <% end %>

    <% flash.each do |type, message| %>
      <div class="flash flash-#{type}">
        <p><%= message %></p>
      </div>
    <% end %>

    <%= yield %>

  </div>
  
</body>
</html>
